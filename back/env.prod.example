############################################
# ChatHut Production Environment Example   #
# Copy to .env.prod and fill secrets        #
############################################

# ─── Runtime ──────────────────────────────
ENV=production
HOST=0.0.0.0
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# ─── CORS ─────────────────────────────────
CORS_ORIGINS=https://chathut.net,https://www.chathut.net

# ─── Gemini API ───────────────────────────
GEMINI_API_KEY=

# ─── Postgres (DigitalOcean) ─────────────-
DATABASE_URL=postgresql://doadmin:<PASSWORD>@<HOST>:25060/defaultdb?sslmode=require

# ─── Qdrant Cloud ─────────────────────────
QDRANT_URL=https://<your-id>.cloud.qdrant.io
QDRANT_API_KEY=
QDRANT_HTTPS=true

# ─── Redis (optional) ─────────────────────
REDIS_URL=

# ─── WhatsApp Service ─────────────────────
WHATSAPP_SERVICE_URL=http://whatsapp:3000

# ─── Telegram API ─────────────────────────
TELEGRAM_API_ID=
TELEGRAM_API_HASH= 